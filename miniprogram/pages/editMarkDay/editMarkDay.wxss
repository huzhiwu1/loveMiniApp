/* miniprogram/pages/editMarkDay/editMarkDay.wxss */
page{
    height:100%;
    width: 100%;
}
.wrapper{
    width:100%;
    height:100%;
    position: relative
}
.bg{
    width:100%;
    height:100%;
    
}
.btnGroupBox{
    position: relative;
    width:100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    bottom:40%;
}
.btnBox{
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    align-items: center;
}
.imgBox{
    width:120rpx;
    height:120rpx;
    border-radius: 50%;
  
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
.img{
    width:50%;
    height:50%;
}
.btnTitle{
    margin-top:10rpx;
    font-size:30rpx;
    letter-spacing: 1px;
    color:#fff;
}
.infoBox{
    position: absolute;
    top:30%;
    left:50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    flex-direction: column;
    font-size:30rpx;
    justify-content: center;
    color:#fff;
    /* background-color: #fff;
     */
}
.dayName{
    
    font-size: 40rpx;
}
.dayNumBox{
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    position: relative;
    /* flex-direction: column; */
}
.dayNum{
    font-size: 100rpx;

}
.title{
    position: absolute;
    background-color: #ff6b81;
    right:-70rpx;
    top:0px;
    padding:8rpx;
    font-size: 25rpx;
    border-radius: 25%;
    border-bottom-left-radius: 0;
}