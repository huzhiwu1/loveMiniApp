/* miniprogram/pages/mine/mine.wxss */
page{
    width:100%;
    height:100%
}
.header{
    height: 44px;
    line-height: 44px;
    text-align: left;
    font-size: 15px;
    padding-left:30rpx;
}
.wrapper{
    width:100%;
    height:100%;
    background:#fff;
    position: relative;
}
.footer{
    position:absolute;
    bottom: 40rpx;
    left:50%;
    font-size: 40rpx;
    font-weight: 800;
    color:#34b5ff;
    letter-spacing: 2px;
    transform: translate(-50%);
}
.btn{
    box-shadow: 0px 4px 8px 5px rgba(226, 132, 146,.6);
    margin-top: 100rpx;
    color:#fff;
    font-size:60rpx;
    width:80%;
    background-color: #ff6b81;
    height:120rpx;
    line-height: 120rpx;
    padding:0;
    border-radius: 60rpx;

}
.btn::after{
    display: none;
}