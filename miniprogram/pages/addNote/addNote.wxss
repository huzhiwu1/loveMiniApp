/* miniprogram/pages/addNote/addNote.wxss */
page{
    background-color: #fff;
}
.wrapper{
    padding:0 20rpx 0;
    background-color: #fff;
}
.textBox{
   
    padding-top:20rpx;
    border-top:1rpx solid rgba(127,127,127,0.1); 
}
.editor{
    font-size:30rpx;
    line-height: 40rpx;
    font-weight: 300;
    letter-spacing: 1rpx;
    font-family: Arial, Helvetica, sans-serif;
}
.emojiBox{
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.wordNum{
    color:#bfbfbf;
    font-size:30rpx;
    margin-right: 20rpx;
}
.placeholder{
    font-size:30rpx;
    font-weight: 300;
    letter-spacing: 1rpx;
}
.imgBox{
    margin-top: 20rpx;
    border-top: 1rpx solid rgba(127,127,127,0.1);
    padding-top:50rpx;
}
.add{
    margin-bottom: 40rpx;
    width:150rpx;
    height:150rpx;
    padding:40rpx;
    box-sizing: border-box;
    border-radius:10rpx;
    background-color: rgba(127,127,127,0.1);
}
.imgBox{
    width:100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}
.oneImgBox{
    margin-right:80rpx;
    margin-bottom: 40rpx;
    display: inline-block;
    width:150rpx;
    height:150rpx;
    border-radius:10rpx;
    position: relative;
}
.closeImg{
    width:40rpx;
    height:40rpx;
    position: absolute;
    top:-20rpx;
    right:-20rpx;
}
.img{

   width:100%;
   height:100%;
}
.localBox{
    width:100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.localAndTitle{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color:#bfbfbf;
    font-size:30rpx;
}
.localImg{
    margin-right: 10rpx;
    width:40rpx;
    height:40rpx;
}
.localClosePng{
    width:45rpx;
    height:45rpx;
    margin-left: 50rpx;
}