/* components/imgContent/imgContent.wxss */
.wrapper{
    width:100%;
    display: flex; 
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
}
.oneImgBox{
    width:45%;
    margin-bottom: 10rpx;
    padding-top: 45%;
    /* height:30%; */
    position: relative;
}
.imgBox{
    width:31%;
    /* margin-top: 10px; */
    margin-bottom: 10rpx;
    padding-top: 31%;
    /* height:30%; */
    position: relative;
    /* background-color: green; */
}
.img{
    top:0;
    left:0;
    border-radius: 5px;
    position: absolute;

    width:100%;
    height:100%; 
}
.mark{
    background-color: rgba(0,0,0,0.6);
    width:31%;
    padding-top: 31%;
    position: absolute;
    right:0;
    border-radius: 5px;
    bottom:10rpx
}
.num{
    top:0;
    left:0;
    position: absolute;
    width:100%;
    height:100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color:#fff;
    letter-spacing: 1px;
    font-size:20px;

    
}